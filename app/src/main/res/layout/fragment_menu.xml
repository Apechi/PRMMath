<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    android:background="@drawable/bg_gradient"
    tools:context=".ui.fragment.MenuFragment">

    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/bg_image"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_in_tile_menu"
        android:backgroundTint="#134B70"
        android:drawableStart="@drawable/ic_settings_24dp"
        android:drawablePadding="8dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:padding="16dp"
        android:text="@string/settingmnu"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leaderboardButton"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/modesButton"

        android:layout_width="wrap_content"
        android:layout_height="67dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_in_tile_menu"
        android:backgroundTint="#134B70"
        android:drawableStart="@drawable/ic_dumbbell_solid"
        android:drawablePadding="8dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:padding="16dp"
        android:text="@string/playbtn"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pvpButton"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/pvpButton"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:background="@drawable/bg_in_tile_menu"
        android:backgroundTint="#134B70"
        android:drawableStart="@drawable/ic_gamepad_solid"
        android:drawablePadding="8dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:padding="16dp"
        android:text="@string/pvpbtn"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/leaderboardButton"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_in_tile_menu"
        android:backgroundTint="#134B70"
        android:drawableStart="@drawable/ic_trophy_solid"
        android:drawablePadding="8dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:padding="16dp"
        android:text="@string/scoreboardmnu"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modesButton"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/theprimelogo"
        app:layout_constraintBottom_toTopOf="@+id/pvpButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/app_name"
        android:textAllCaps="false"
        android:textColor="#201E43"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>